@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using TrangChuWebsite.Models
@using PagedList.Mvc
@model PagedList.IPagedList<User>
    <style>
        .user-content {
            margin: 0px;
            padding: 0px;
            margin-top: 15px;
        }

            .user-content table {
                margin: 0px auto;
                margin-top: 15px;
                background: white;
                width: 95%;
            }

                .user-content table tr {
                    height: 50px;
                    line-height: 50px;
                }

                    .user-content table tr td {
                        font-size: 18px;
                        color: black;
                    }

        td {
            padding-left: 25px;
        }
        td i{
            cursor:pointer;
        }
        th {
            color: antiquewhite;
            font-weight: 400;
            padding-left: 25px;
        }
        .pagination{
            width: 95%;
            margin: 15px auto;
        }
        .pagination li{
            width: 38px;
            height: 38px;
            text-align: center;
            line-height: 38px;
            border: 1px solid #333;
            border-radius: 8px;
            margin-right: 5px;
            background-color: white;
        }
        .btn_add{
            border-radius: 8px;
            background-color: #333;
            padding: 10px 0px;
            text-align: center;
            width: 120px;
        }
        .btn_add a{
            text-decoration: none;
            color: antiquewhite;
        }
        .hang:hover td {
            background-color: #f5f5f5;
        }
    </style>
    <div class="user-content">
        <div style="width: 95%; margin: auto;">
            <div class="btn_add"><a href="/Admin/Users/Create">Add User</a></div>
        </div>
        <table border="0" cellpadding="5">
            <tr align="left" style="background: #333;">
                <th>id</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th width="100px"></th>
            </tr>
            <!-- phan co so du leu -->
            @foreach (User item in Model)
            {
                <tr align="left" class="hang">
                    <td>@item.id</td>
                    <td>@item.hoten</td>
                    <td>@item.email</td>
                    <td width="100px">
                        <a href="/Admin/Users/Update/@item.id"><i class="far fa-edit"></i></a>
                        <a href="/Admin/Users/Delete/@item.id" onclick="return window.confirm('Bạn muốn xóa user này?');"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Read", new { page }))
    </div>

