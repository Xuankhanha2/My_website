}
<div class="giohang-left">
    <!-- drop-box -->
    <div class="san-pham-duoc-them">
        <table class="list-product">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên hàng</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th> </th>
            </tr>
            <tr>
                <td colspan="5">
                    Chưa có mặt hàng nào.
                </td>
            </tr>
        </table>
        <a href="/Home" class="btn btn-dark">Tiếp tục mua hàng</a>
