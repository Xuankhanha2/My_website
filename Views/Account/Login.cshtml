@functions{
    public string coockieEmail()
    {
        if(Request.Cookies["UEmail"] != null)
        {
            return Request.Cookies["UEmail"].Value.Trim();
        }
        else
        {
            return "";
        }
    }

    public string coockiePass()
    {
        if (Request.Cookies["UEmail"] != null)
        {
            return Request.Cookies["UPassword"].Value.Trim();
        }
        else
        {
            return "";
        }
    }
}
<div class="page-wrapper">
    <div class="page-content--bge5" style="height: auto !important">
        <div class="container">
            <div class="login-wrap" style="padding-top: 20px !important">
                <div class="notify">
                    @if(Request.QueryString["notify"] != null && Request.QueryString["notify"] == "invalid")
                    {
                        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Tài khoản hoặc mật khẩu không đúng</div>
                    }
                </div>
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h1>Đăng nhập</h1>
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Email</label>
                                <input class="au-input au-input--full" type="email" name="email" placeholder="Email" value="@coockieEmail()">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input class="au-input au-input--full" type="password" name="password" placeholder="Password" value="@coockiePass()">
                            </div>
                            <div class="login-checkbox">

                                <label>
                                    <input type="checkbox" name="remember">Nhớ tài khoản này
                                </label>
                                <label>
                                    <a href="#">Quên mật khẩu?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng nhập</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Bạn chưa có tài khoản?
                                <a href="/Account/Register">Đăng ký tại đây</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
