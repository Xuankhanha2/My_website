<div class="page-wrapper">
    <div class="page-content--bge5" style="height: auto !important">
        <div class="container">
            <div class="login-wrap" style="padding-top: 20px !important">
                <div class="notify">
                    <div class="alert alert-success" style="background-color: #46e144 !important;">Bạn cần đăng nhập trước khi đánh giá sản phẩm.</div>
                    @if (Request.QueryString["notify"] != null && Request.QueryString["notify"] == "invalid")
                    {
                        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Tài khoản hoặc mật khẩu không đúng</div>
                    }
                </div>
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h1>Đăng nhập</h1>
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Email Address</label>
                                <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input class="au-input au-input--full" type="password" name="password" placeholder="Password">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input type="checkbox" name="remember">Remember Me
                                </label>
                                <label>
                                    <a href="#">Forgotten Password?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng nhập</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Don't you have account?
                                <a href="/Account/Register">Sign Up Here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

