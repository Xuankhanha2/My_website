@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@* Lay ra DataContext db.Categories *@
@using TrangChuWebsite.Models
@using PagedList.Mvc
@* Lay duoc Model list ra de dua vao trang nay *@
@model PagedList.IPagedList<Product>
@functions{
    string formatHot(int hot)
    {
        if(hot == 1)
        {
            return "Đang hot";
        }
        else
        {
            return "Thường";
        }
    }
}
<style>
    .user-content {
        margin: 0px;
        padding: 0px;
        margin-top: 15px;
    }

        .user-content table {
            margin: 0px auto;
            margin-top: 15px;
            background: white;
            width: 95%;
        }

            .user-content table tr {
                height: 50px;
                line-height: 50px;
            }

                .user-content table tr td {
                    font-size: 18px;
                    color: black;
                }

    td {
        padding-left: 20px;
    }

        td i {
            cursor: pointer;
        }

        td img {
            width: 120px;
            margin: 0px;
            padding: 0px;
        }
    td a{
        font-size: 14px;
        padding: 5px 5px;
    }
    td a:hover{
        text-decoration: underline;
    }
    th {
        color: antiquewhite;
        font-weight: 400;
        padding-left: 20px;
    }

    .pagination {
        width: 95%;
        margin: 15px auto;
    }

        .pagination li {
            width: 38px;
            height: 38px;
            text-align: center;
            line-height: 38px;
            border: 1px solid #333;
            border-radius: 8px;
            margin-right: 5px;
            background-color: white;
        }

    .btn_add {
        border-radius: 8px;
        background-color: #333;
        padding: 10px 0px;
        text-align: center;
        width: 160px;
    }

        .btn_add a {
            text-decoration: none;
            color: antiquewhite;
        }

    .hang:hover td {
        background-color: #f5f5f5;
    }
</style>
<div class="user-content">
    <div style="width: 95%; margin: auto;">
        <div class="btn_add"><a href="/Admin/Products/Create">
             Thêm sản phẩm</a></div>
    </div>
    <table border="0" cellpadding="5">
        <tr align="left" style="background: #333;">
            <th>Ảnh chính</th>
            <th>Tên sản phẩm</th>
            <th>Giá sản phẩm</th>
            <th>Sản phẩm hot</th>
            <th> </th>
        </tr>
        <!-- phan co so du leu -->
        @{
            BaseClass baseClass = new BaseClass();
        }
        @foreach (Product item in Model)
        {
        <tr align="left" class="hang">
        <td><img src="~/Assets/Upload/Products/@item.photo"/></td>
        <td>@item.name</td>
        <td>@baseClass.formatMoney(item.price)</td>
        <td>@formatHot(item.hot)</td>
        <td width="200">
            <a href="/Admin/Products/Images/@item.id">Ảnh</a>
            <a href="/Admin/Products/Update/@item.id">Sửa</a>
            <a href="/Admin/Products/Delete/@item.id" onclick="return window.confirm('Bạn muốn xóa mặt hàng này?');">Xóa</a>
        </td>
    </tr>
        }
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Read", new { page }))
</div>
<script>
</script>



