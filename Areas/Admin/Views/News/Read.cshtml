@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@* Lay ra DataContext db.Categories *@
@using TrangChuWebsite.Models
@using PagedList.Mvc
@* Lay duoc Model list ra de dua vao trang nay *@
@model PagedList.IPagedList<News>
@functions{
    string HotShow(int isHot)
    {
        if(isHot == 1)
        {
            return "Tin hot";
        }
        else
        {
            return "";
        }
    }
}
<style>
    .user-content {
        margin: 0px;
        padding: 0px;
        margin-top: 15px;
    }

        .user-content table {
            margin: 0px auto;
            margin-top: 15px;
            background: white;
            width: 95%;
        }

            .user-content table tr {
                height: 50px;
                line-height: 50px;
            }

                .user-content table tr td {
                    font-size: 18px;
                    color: black;
                }

    td {
        padding-left: 25px;
    }

        td i {
            cursor: pointer;
        }

        td img {
            width: 120px;
            margin: 0px;
            padding: 0px;
        }
        td a {
            font-size: 14px;
            padding: 5px 5px;
        }

            td a:hover {
                text-decoration: underline;
            }
    th {
        color: antiquewhite;
        font-weight: 400;
        padding-left: 25px;
    }

    .pagination {
        width: 95%;
        margin: 15px auto;
    }

        .pagination li {
            width: 38px;
            height: 38px;
            text-align: center;
            line-height: 38px;
            border: 1px solid #333;
            border-radius: 8px;
            margin-right: 5px;
            background-color: white;
        }

    .btn_add {
        border-radius: 8px;
        background-color: #333;
        padding: 10px 0px;
        text-align: center;
        width: 160px;
    }

        .btn_add a {
            text-decoration: none;
            color: antiquewhite;
        }

    .hang:hover td {
        background-color: #f5f5f5;
    }
</style>
<div class="user-content">
    <div style="width: 95%; margin: auto;">
        <div class="btn_add"><a href="/Admin/News/Create">Thêm tin</a></div>
    </div>
    <table border="0" cellpadding="5">
        <tr align="left" style="background: #333;">
            <th>Tiêu đề tin</th>
            @*<th>Description</th>
            <th>Content</th>*@
            <th>Tin hot</th>
            <th>Ảnh</th>
            <th> </th>
        </tr>
        <!-- phan co so du leu -->
        @foreach (News item in Model)
        {
            <tr align="left" class="hang">
                <td>@item.name</td>
                @*<td>@item.description</td>
                <td>@item.content</td>*@
                <td>@HotShow(item.hot)</td>
                <td><img src="~/Assets/Upload/News/@item.photo"/></td>
                <td width="160">
                    <a href="/Admin/News/Update/@item.id">Sửa</a>
                    <a href="/Admin/News/Delete/@item.id" onclick="return window.confirm('Bạn muốn xóa News này?');">Xóa</a>
                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Read", new { page }))
</div>


