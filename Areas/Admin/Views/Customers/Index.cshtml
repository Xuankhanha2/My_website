@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using TrangChuWebsite.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Customer>
<style>
    .user-content {
        margin: 0px;
        padding: 0px;
        margin-top: 15px;
    }

        .user-content table {
            margin: 0px auto;
            margin-top: 15px;
            background: white;
            width: 95%;
        }

            .user-content table tr {
                height: 50px;
                line-height: 50px;
            }

                .user-content table tr td {
                    font-size: 18px;
                    color: black;
                }

    td {
        padding-left: 25px;
    }

        td i {
            cursor: pointer;
        }

    th {
        color: antiquewhite;
        font-weight: 400;
        padding-left: 25px;
    }

    .pagination {
        width: 95%;
        margin: 15px auto;
    }

        .pagination li {
            width: 38px;
            height: 38px;
            text-align: center;
            line-height: 38px;
            border: 1px solid #333;
            border-radius: 8px;
            margin-right: 5px;
            background-color: white;
        }
    .hang:hover td {
        background-color: #f5f5f5;
    }
</style>
<div class="user-content">
    <table border="0" cellpadding="5">
        <tr align="left" style="background: #333;">
            <th>Họ tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
        </tr>
        <!-- phan co so du leu -->
        @foreach (Customer item in Model)
        {
            <tr align="left" class="hang">
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>


